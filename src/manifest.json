{
	"manifest_version": 2,

	"name": "Tomcat site manager",
	"description": "Create, reload and remove Tomcat virtual hosts",
	"version": "3.0",

	"browser_action": {
		"default_title": "Manage virtual hosts",
		"default_popup": "index.html"
	},

	"icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

	"permissions": [
		"tabs",
		"http://*/"
  ]
}
